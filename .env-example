SECRET_KEY=
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=5432
DJANGO_SETTINGS_MODULE=core.settings_saas

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
# Redis broker and backend for Celery tasks
CELERY_BROKER_URL=redis://127.0.0.1:6379/2
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/2

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis for caching and Channels
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=1
REDIS_LOCATION=redis://127.0.0.1:6379/1

# ============================================================================
# NOTIFICATION SYSTEM SETTINGS
# ============================================================================
# Notification retention and aggregation
NOTIFICATION_RETENTION_DAYS=90
NOTIFICATION_MAX_AGGREGATION_COUNT=20
NOTIFICATION_AGGREGATION_TIME_WINDOW=3600

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# SMTP settings for email notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@payroll.com
EMAIL_NOTIFICATION_FROM_EMAIL=noreply@payroll.com
EMAIL_NOTIFICATION_REPLY_TO=noreply@payroll.com
EMAIL_FILE_PATH=/app/test-emails

# ============================================================================
# TWILIO SMS CONFIGURATION
# ============================================================================
# Twilio credentials for SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# FIREBASE CLOUD MESSAGING (FCM) CONFIGURATION
# ============================================================================
# Firebase credentials for push notifications
FCM_SERVER_KEY=your_fcm_server_key

# ============================================================================
# DJAZZMIN ADMIN CONFIGURATION
# ============================================================================
SITE_TITLE=Payroll Admin
SITE_TAGLINE=Payroll Management System
SITE_DESCRIPTION=Payroll Management System
SITE_LOGO=/static/logo.png

# ============================================================================
# SAAS MULTI-TENANCY CONFIGURATION
# ============================================================================
MULTI_COMPANY_MEMBERSHIP_ENABLED=True
SAAS_ENFORCE_ACTIVE_COMPANY=True

# ============================================================================
# SECURITY / REVERSE PROXY
# ============================================================================
USE_X_FORWARDED_HOST=True
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ============================================================================
# API AUTH (JWT)
# ============================================================================
JWT_ACCESS_MINUTES=30
JWT_REFRESH_DAYS=7
DRF_THROTTLE_ANON=60/min
DRF_THROTTLE_USER=300/min

# ============================================================================
# AUTH HARDENING
# ============================================================================
OTP_MAX_ATTEMPTS=5
OTP_ATTEMPT_WINDOW_SECONDS=600
OTP_LOCKOUT_SECONDS=900
